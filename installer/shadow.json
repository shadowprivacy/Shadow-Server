{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:ListAllMyBuckets"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                 "arn:aws:s3:::attachments",
                 "arn:aws:s3:::profiles",
                 "arn:aws:s3:::stickers",
                 "arn:aws:s3:::debuglogs"
            ]
        },        
        {            
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
            ],
            "Effect": "Allow",
            "Resource": [
                 "arn:aws:s3:::attachments/*",
                 "arn:aws:s3:::profiles/*",
                 "arn:aws:s3:::stickers/*",
                 "arn:aws:s3:::debuglogs/*"
            ],
            "Sid": ""
        }
    ]
}